.invite {
  height: 100%;
}
.invite .tab {
  height: 100rpx;
  text-indent: 20rpx;
}
.invite .tab .title {
  font-weight: bold;
  line-height: 100rpx;
  font-size: 40rpx;
}
.invite .tab .line {
  width: 20%;
  height: 5rpx;
  background-color: red;
  margin-left: 50rpx;
}
.invite .img {
  width: 90%;
  height: 370rpx;
  margin: 30rpx auto;
  border-radius: 40rpx;
  background: url(https://s1.ax1x.com/2020/03/16/8JudF1.png) no-repeat;
  background-size: cover;
}
.invite .mask {
  width: 100%;
  height: 100%;
  position: absolute;
  text-align: center;
  top: 0;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.5);
}
.invite .mask .image {
  width: 100%;
  height: 100%;
  padding-top: 10%;
  position: relative;
}
.invite .mask .image image {
  width: 496rpx;
  height: 878rpx;
}
.invite .mask .image .qrcode {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  bottom: 20%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.invite .mask .image uni-icons {
  position: absolute;
  top: 2%;
  right: 8%;
}
.invite .mask .btn-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 20rpx;
}
.invite .mask .btn-group button {
  width: 30%;
}

