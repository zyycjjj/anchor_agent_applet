.ranklist {
  padding: 0 10px;
}
.ranklist .tab {
  height: 100rpx;
  text-indent: 20rpx;
}
.ranklist .tab .title {
  font-weight: bold;
  line-height: 100rpx;
  font-size: 40rpx;
}
.ranklist .tab .line {
  width: 20%;
  height: 5rpx;
  background-color: red;
  margin-left: 70rpx;
}
.ranklist .phblb {
  margin-top: 10rpx;
}
.ranklist .phblb .phb-item {
  border-bottom: 1rpx solid #cccccc;
  position: relative;
  line-height: 130rpx;
}
.ranklist .phblb .phb-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.ranklist .phblb .phb-item .nickname {
  margin-left: 180rpx;
  font-weight: bold;
}
.ranklist .phblb .phb-item .money {
  float: right;
}

