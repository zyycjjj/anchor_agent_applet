.anchor {
  height: 100%;
  width: 100%;
  position: relative;
}
.anchor .addzb {
  color: red;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  line-height: 1;
}
.anchor .addzb .icon-tianjia {
  font-size: 100px;
}
.anchor .neil-modal__header {
  color: red;
  font-weight: bolder;
  line-height: 2.25;
  text-align: left;
  letter-spacing: 2px;
}
.anchor .mtk-input {
  height: 80rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.anchor .mtk-input::after {
  content: ' ';
  position: absolute;
  left: 30rpx;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.anchor .mtk-input view {
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333333;
  margin: 20rpx;
}
.anchor .mtk-input input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 50rpx;
  line-height: 50rpx;
}
.neil-modal__footer-left,
.neil-modal__footer-right {
  line-height: 120rpx;
}
.zblistitem {
  border-bottom: 1px solid #cccccc;
  height: 5em;
  position: relative;
  text-indent: 70px;
  padding-top: 10px;
}
.zblistitem .avatar {
  width: 50px;
  height: 50px;
  position: absolute;
  left: 5px;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  border: 1px solid #cccccc;
  border-radius: 50%;
}
.zblistitem .zbname {
  font-weight: bolder;
}
.zblistitem .dyid {
  display: block;
  margin-top: 15rpx;
  font-size: 23rpx;
  color: grey;
}
.zblistitem .uni-tag {
  position: absolute;
  right: 0;
  top: 50%;
  right: 10rpx;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  text-indent: 0;
}
.addanch {
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  color: brown;
}
.ranklist {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.ranklist .uni-notice-bar {
  position: relative;
}

