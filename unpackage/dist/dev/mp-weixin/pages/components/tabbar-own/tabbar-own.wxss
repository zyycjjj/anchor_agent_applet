.segmented-control {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #ffffff;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #f6f6f6;
}
.segmented-control .segmented-control-item {
  width: 178rpx;
  font-size: 32rpx;
  color: #999;
}
.segmented-control .active {
  color: #333;
}
.line {
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #e5a600;
  position: absolute;
  top: 80rpx;
  left: 0;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}

